<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
	<name>COM_MIJOPOLLS</name>
	<author>Mijosoft LLC</author>
	<creationDate>October 2013</creationDate>
	<authorEmail>info@mijosoft.com</authorEmail>
	<authorUrl>http://mijosoft.com</authorUrl>
	<copyright>Copyright (C) Mijosoft LLC, mijosoft.com</copyright>
	<license>GNU/GPL, http://www.gnu.org/licenses/gpl-2.0.html</license>
	<version>1.1.4</version>
	<description>MijoPolls is a simple and flexible component for voting. It shows vote results in 2 types, a nice pie chart or default Joomla way.</description>
	
	<files folder="site">
		<filename>mijopolls.php</filename>
		<filename>index.html</filename>
		<filename>jomsocial_rule.xml</filename>
		<filename>router.php</filename>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	
	<languages folder="languages/site">
		<language tag="en-GB">en-GB.com_mijopolls.ini</language>
	</languages>

    <media folder="media" destination="mijopolls">
        <folder>js</folder>
        <folder>swf</folder>
        <folder>images</folder>
    </media>

	<administration>
		<menu img="../media/mijopolls/images/mijopolls.png" link="option=com_mijopolls">COM_MIJOPOLLS</menu>
		<submenu>
			<menu link="option=com_mijopolls&amp;controller=polls">COM_MIJOPOLLS_POLLS</menu>
			<menu link="option=com_mijopolls&amp;controller=votes">COM_MIJOPOLLS_VOTES</menu>
		</submenu>
		
		<files folder="admin">
			<filename>config.xml</filename>
			<filename>index.html</filename>
			<filename>toolbar.php</filename>
			<filename>mijopolls.php</filename>
			<folder>assets</folder>
			<folder>elements</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>mvc</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
		
		<languages folder="languages/admin">
			<language tag="en-GB">en-GB.com_mijopolls.ini</language>
			<language tag="en-GB">en-GB.com_mijopolls.menu.ini</language>
			<language tag="en-GB">en-GB.com_mijopolls.sys.ini</language>
		</languages>		
	</administration>
	
	<scriptfile>script.php</scriptfile>
	
	<updateservers>
		<server type="extension" priority="1" name="MijoPolls Updates">http://mijosoft.com/joomla_updates.xml</server>
	</updateservers>
</extension>