<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5.0" type="plugin" group="mijopolls" method="upgrade">
	<name>MijoPolls - Mighty Touch</name>
	<author>Mijosoft LLC</author>
	<creationDate>February 2011</creationDate>
	<copyright>(C) 2009-2011 Mijosoft LLC</copyright>
	<license>GNU/GPL, http://www.mijosoft.com/company/license</license>
	<authorEmail>info@mijosoft.com</authorEmail>
	<authorUrl>www.mijosoft.com</authorUrl>
	<version>1.0.0</version>
	<description>MijoPolls - Mighty Touch plugin.</description>
	<files>
		<filename plugin="mightytouch">mightytouch.php</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="points" type="radio" default="0" label="Enable Points System" description="Enable Points System">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="points_value" type="text" default="0" label="Points for voting" description="How many points should be added to user after vote?" />
				<field name="activity" type="radio" default="0" label="Enable Activity Stream" description="Enable Activity Stream">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>